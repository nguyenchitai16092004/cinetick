APP_NAME=Laravel
APP_ENV=local
APP_KEY=  # ← Chạy lệnh `php artisan key:generate` để tự động tạo
APP_DEBUG=true
DEBUGBAR_ENABLED=false
APP_URL=http://127.0.0.1:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Ho_Chi_Minh

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name       # ← Nhập tên database MySQL
DB_USERNAME=your_db_user             # ← Nhập tên user truy cập MySQL
DB_PASSWORD=your_db_password         # ← Nhập mật khẩu database

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=

FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync 
CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_mail_username     # ← Email dùng để gửi (nên là email app hoặc dùng Mailtrap để test)
MAIL_PASSWORD=your_mail_password     # ← Mật khẩu ứng dụng hoặc mật khẩu email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="your_email@example.com"  # ← Email hiển thị khi gửi đi
MAIL_FROM_NAME="Cinetick"

PAYOS_CLIENT_ID=your_payos_client_id         # ← Nhập Client ID từ PayOS
PAYOS_API_KEY=your_payos_api_key             # ← Nhập API Key từ PayOS
PAYOS_CHECKSUM_KEY=your_payos_checksum_key   # ← Nhập Checksum Key từ PayOS

BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your_pusher_app_id             # ← Lấy từ cấu hình Pusher
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=ap1

AWS_ACCESS_KEY_ID=                            # ← (Tuỳ chọn) Key AWS nếu sử dụng S3 (có thể bỏ trống)
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

RECAPTCHA_SECRET=your_recaptcha_secret        # ← Nhập secret key từ Google reCAPTCHA v2/v3
